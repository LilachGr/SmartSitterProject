<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReservationLayoutLab">


    <ImageView
            android:layout_width="504dp"
            android:layout_height="619dp" app:srcCompat="@drawable/room_plan"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="41dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/todo"/>
    <TextView
            android:id="@+id/previous_data"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/building_room"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp" android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/chosen_room_building"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/building_room"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="22dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/chosen_chair_id"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.333" android:layout_marginTop="57dp"/>
    <Button
            android:id="@+id/chair_id_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/chair_id_custom_butten"
            android:text="@string/_1"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="42dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginBottom="655dp" android:layout_marginEnd="420dp" android:layout_marginRight="420dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginLeft="159dp" android:layout_marginStart="159dp"
            app:layout_constraintHorizontal_bias="0.29" app:layout_constraintVertical_bias="0.048"/>
    <Button
            android:id="@+id/chair_id_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/chair_id_custom_butten"
            android:text="@string/_2"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="42dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginBottom="655dp" android:layout_marginEnd="420dp" android:layout_marginRight="420dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginLeft="159dp" android:layout_marginStart="159dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.048"/>
    <Button
            android:id="@+id/send_location"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:text="@string/send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>