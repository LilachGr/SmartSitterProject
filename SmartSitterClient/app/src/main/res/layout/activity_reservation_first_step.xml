<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReservationFirstStepActivity" tools:layout_editor_absoluteY="81dp">


    <TextView
            android:id="@+id/page_name11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/title_reservation_first_step"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.061"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:hint="@string/time_format_h_m"
            android:textColorHint="#80000000"
            android:id="@+id/time_reservation"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="223dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.507" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/duration"
            app:layout_constraintVertical_bias="0.31"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/for_how_long_should_dby_in_minutes"
            android:id="@+id/duration"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toStartOf="@+id/spinner_duration_layout" android:layout_marginRight="18dp"
            android:layout_marginStart="57dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="57dp" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/send_reservation" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="387dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_duration_layout"
            android:layout_marginEnd="96dp" android:layout_marginRight="96dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="241dp" android:layout_marginStart="241dp" android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/time_reservation" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="313dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.255"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/date_format_d_m_y"
            android:textColorHint="#80000000"
            android:id="@+id/date_reservation"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="154dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/time_reservation"
            app:layout_constraintVertical_bias="0.12"/>
    <Button
            android:id="@+id/send_reservation"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/send_custom_button"
            android:textAlignment="center"
            android:textColor="@color/colorBrightText"
            android:text="@string/send"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="429dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="126dp"
            app:layout_constraintVertical_bias="0.175"/>
    <TextView
            android:id="@+id/reservation_later_message"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_reservation" app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:id="@+id/next_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/next_custom_button"
            android:textAlignment="center"
            android:text="@string/next"
            android:textColor="@color/colorBrightText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="307dp" android:layout_marginStart="307dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="544dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.821"/>

</androidx.constraintlayout.widget.ConstraintLayout>